<div class="jewelry-hero-{{ section.id }}" id="{{ section.settings.position_2 }}">
  <div class="hero-wrapper-{{ section.id }}">
    <picture>
      <source media="(max-width: 768px)" srcset="{{ section.settings.background_image_mobile | img_url: 'master' }}">
      <img src="{{ section.settings.background_image_desktop | img_url: 'master' }}" alt="Hero Image" class="hero-img-{{ section.id }}" width="100%" height="auto">
    </picture>
    <div class="text-content-{{ section.id }}">
      <h3 class="collection-subtitle-{{ section.id }}">{{ section.settings.subtitle }}</h3>
      <div class="collection-description-{{ section.id }}">{{ section.settings.description }}</div>
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="hero-button-{{ section.id }}">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .jewelry-hero-{{ section.id }} {
    width: 100%;
    /* 移除 height 和 background-image */
  }
  
  .hero-wrapper-{{ section.id }} {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
  }
  
  .hero-img-{{ section.id }} {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .text-content-{{ section.id }} {
    width: {{ section.settings.text_width_desktop }}%;
    text-align: {{ section.settings.text_align }};
    color: {{ section.settings.text_color }};
    position: absolute;
    {% if section.settings.text_bg_color != 'transparent' %}
      background-color: {{ section.settings.text_bg_color }};
      padding: 20px;
      border-radius: 5px;
    {% endif %}
  }
  
  .collection-subtitle-{{ section.id }} {
    font-size: {{ section.settings.subtitle_font_size_desktop }}px;
    font-weight: 600;
    margin-bottom: 15px;
  }
  
  .collection-description-{{ section.id }} {
    font-size: {{ section.settings.description_font_size_desktop }}px;
    line-height: 1.8;
    font-family: Poppins;
    font-weight: 500;
  }

  .hero-button-{{ section.id }} {
    background: #F6BE00;
    display: inline-block;
    padding: 10px 30px;
    border-radius: 100px;
    color: #000000;
    font-size: 16px;
    text-decoration: none;
  }

  @media screen and (min-width: 768px) {
     .text-content-{{ section.id }} {
        {% if section.settings.text_position_desktop == 'top-left' %}
        top: {{ section.settings.text_margin_top_desktop }}px;
        left: {{ section.settings.text_margin_left_desktop }}px;
        right: auto;
        bottom: auto;
      {% elsif section.settings.text_position_desktop == 'top-right' %}
        top: {{ section.settings.text_margin_top_desktop }}px;
        right: {{ section.settings.text_margin_right_desktop }}px;
        left: auto;
        bottom: auto;
      {% elsif section.settings.text_position_desktop == 'bottom-left' %}
        bottom: {{ section.settings.text_margin_bottom_desktop }}px;
        left: {{ section.settings.text_margin_left_desktop }}px;
        top: auto;
        right: auto;
      {% elsif section.settings.text_position_desktop == 'bottom-right' %}
        bottom: {{ section.settings.text_margin_bottom_desktop }}px;
        right: {{ section.settings.text_margin_right_desktop }}px;
        top: auto;
        left: auto;
      {% elsif section.settings.text_position_desktop == 'center' %}
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      {% endif %}
    }
  }
  @media screen and (max-width: 768px) {
    /* 移除 background-image 和 height */
    .text-content-{{ section.id }} {
      width: {{ section.settings.text_width_mobile }}%;
      {% if section.settings.text_position_mobile == 'top-left' %}
        top: {{ section.settings.text_margin_top_mobile }}px;
        left: {{ section.settings.text_margin_left_mobile }}px;
        right: auto;
        bottom: auto;
      {% elsif section.settings.text_position_mobile == 'top-right' %}
        top: {{ section.settings.text_margin_top_mobile }}px;
        right: {{ section.settings.text_margin_right_mobile }}px;
        left: auto;
        bottom: auto;
      {% elsif section.settings.text_position_mobile == 'bottom-left' %}
        bottom: {{ section.settings.text_margin_bottom_mobile }}px;
        left: {{ section.settings.text_margin_left_mobile }}px;
        top: auto;
        right: auto;
      {% elsif section.settings.text_position_mobile == 'bottom-right' %}
        bottom: {{ section.settings.text_margin_bottom_mobile }}px;
        right: {{ section.settings.text_margin_right_mobile }}px;
        top: auto;
        left: auto;
      {% elsif section.settings.text_position_mobile == 'center' %}
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      {% endif %}
    }
    
    .collection-subtitle-{{ section.id }} {
      font-size: {{ section.settings.subtitle_font_size_mobile }}px;
    }
    
    .collection-description-{{ section.id }} {
      font-size: {{ section.settings.description_font_size_mobile }}px;
    }
  }
</style>

