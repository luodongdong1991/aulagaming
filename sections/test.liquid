<!-- Summer Sale Banner Section -->
<div class="banner-container-{{ section.id }}">
  <div class="summer-banner-{{ section.id }}">
    <div class="banner-left-{{ section.id }}">
      <div class="banner-icons-{{ section.id }}">
        {% if section.settings.show_sun_icon %}
          <div class="icon-{{ section.id }} sun-icon-{{ section.id }}">{{ section.settings.sun_icon | default: '‚òÄÔ∏è' }}</div>
        {% endif %}
        {% if section.settings.show_palm_icon %}
          <div class="icon-{{ section.id }} palm-icon-{{ section.id }}">{{ section.settings.palm_icon | default: 'üå¥' }}</div>
        {% endif %}
      </div>
      <div class="banner-content-{{ section.id }}">
        <h2 class="banner-title-{{ section.id }}">{{ section.settings.banner_title | default: 'Kick Off Summer with Big Savings!' }}</h2>
        <p class="banner-subtitle-{{ section.id }}">
          {{ section.settings.banner_subtitle_prefix | default: 'Use code' }}
          <span class="promo-code-{{ section.id }}">{{ section.settings.promo_code | default: 'SUN15' }}</span>
          {{ section.settings.banner_subtitle_suffix | default: 'to enjoy' }}
          <span class="discount-{{ section.id }}">{{ section.settings.discount_text | default: '15% OFF' }}</span>!
        </p>
      </div>
    </div>
    
    <div class="banner-right-{{ section.id }}">
      <div class="countdown-container-{{ section.id }}">
        <span class="countdown-label-{{ section.id }}">{{ section.settings.countdown_label | default: 'Ends in' }}</span>
        <div class="countdown-timer-{{ section.id }}" id="countdown-{{ section.id }}">
