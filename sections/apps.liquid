<div class="{% if section.settings.include_margins %}page-width{% endif %}"  id="{{ section.settings.position_2 }}">
  {%- for block in section.blocks -%}
    {% render block %}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "t:sections.apps.name",
  "class": "spaced-section",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "label": "t:sections.apps.settings.include_margins.label",
      "default": false
    },{
      "type": "text",
      "id": "position_2",
      "label": "页面定位Id输入:"
    }
  ],
  "blocks": [{"type": "@app"}],
  "presets": [{
    "name": "t:sections.apps.presets.name"
  }]
}
{% endschema %}
